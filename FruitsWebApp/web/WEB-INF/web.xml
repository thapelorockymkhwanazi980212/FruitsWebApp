<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AddFruitServlet</servlet-name>
        <servlet-class>za.ac.tut.models.AddFruitServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchFruitServlet</servlet-name>
        <servlet-class>za.ac.tut.models.SearchFruitServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetListServlet</servlet-name>
        <servlet-class>za.ac.tut.models.GetListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveFruitServlet</servlet-name>
        <servlet-class>za.ac.tut.models.RemoveFruitServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddFruitServlet</servlet-name>
        <url-pattern>/AddFruitServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchFruitServlet</servlet-name>
        <url-pattern>/SearchFruitServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetListServlet</servlet-name>
        <url-pattern>/GetListServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveFruitServlet</servlet-name>
        <url-pattern>/RemoveFruitServlet.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
